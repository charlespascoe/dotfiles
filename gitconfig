[user]
    name = Charles Pascoe
[init]
    defaultBranch = main
[alias]
    s = status
    sw = switch
    di = diff
    ci = commit
    co = checkout
    cp = cherry-pick
    br = branch
    ds = diff --cached
    dn = diff --no-index
    u = push
    d = pull
    rs = reset
    nm = branch --no-merged
    ci-count = rev-list HEAD --count
    unstage = reset HEAD --
    last = cat-file commit HEAD
    sh = stash
    shu = stash pop
[push]
    default = simple
[pull]
    rebase = true
    ff = only
[color]
    ui = true
[core]
    excludesfile = ~/.gitignore_global
