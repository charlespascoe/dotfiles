#!/bin/zsh

args=()

if [ -n "$1" ]; then
args=(--type "$1")
fi

if [ -z "$2" ] || [[ "$2" == "." ]]; then
args+=(--strip-cwd-prefix)
else
args+=('.' "$2")
fi

# NOTE the tab between %a and %N (needed for 'cut')
fd -0 --ignore-file "$HOME/.gitignore_global" --exclude ".git" $args | xargs -0 stat -f '%a	%N' | sort -nr | cut -f 2
